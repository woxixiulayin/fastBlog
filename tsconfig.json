{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "lib": [
            "es2015"
        ],
        "noImplicitAny": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "sourceMap": false,
        "baseUrl": "src",
        "rootDir": "src",
        "outDir": "dist"
    },
    "modules": "commonjs",
    "exclude": [
        "node_modules/"
    ],
    "include": [
        "src/**/*"
    ]
}