{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "allowJs": true,
        "sourceMap": false,
        "outDir": "dist",
        "baseUrl": ".",
        "watch": true,
        "paths": {
            "*": [
                "node_modules/*",
                "src/*"
            ]
        }
    },
    "exclude": [
        "node_modules/"
    ],
    "include": [
        "src/**/*"
    ]
}