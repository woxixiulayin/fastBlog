{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "sourceMap": false,
        "outDir": "dist",
        "baseUrl": ".",
        "rootDir": ".",
        "watch": true,
        "types": [
            // add node as an option
            "node"
         ],
        "paths": {
            "config": [
                "config.js"
            ],
            "*": [
                "src/*",
                "node_modules/*"
            ]
        }
    },
    "modules": "commonjs",
    "exclude": [
        "node_modules/"
    ],
    "include": [
        "src/**/*"
    ]
}